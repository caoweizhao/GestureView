<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="my_text_size" format="dimension"/>
    <attr name="my_text_color" format="color"/>
    <attr name="my_text" format="string"/>
    <declare-styleable name="CustomText">
        <attr name="my_text_size"/>
        <attr name="my_text_color"/>
        <attr name="my_text"/>
    </declare-styleable>

    <declare-styleable name="CustomImageViewWithText">
        <attr name="my_text_size"/>
        <attr name="my_text_color"/>
        <attr name="my_text"/>
        <attr name="my_image_res" format="reference"/>
        <attr name="my_image_scale_type">
            <enum name="fillXY" value="0"/>
            <enum name="center" value="1"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="CountDownView">
        <attr name="run_speed" format="enum">
            <enum name="fast" value="0"/>
            <enum name="medium" value="1"/>
            <enum name="slow" value="2"/>
        </attr>

        <attr name="first_color" format="color"/>
        <attr name="second_color" format="color"/>
    </declare-styleable>


    <declare-styleable name="VolumeView">
        <attr name="dot_count" format="integer"/>
        <attr name="dot_interval" format="integer"/>
        <attr name="image_res" format="reference"/>
    </declare-styleable>

    <declare-styleable name="GestureView">

        <attr name="no_finger_inner_color" format="color"/>
        <attr name="no_finger_outer_color" format="color"/>
        <attr name="finger_on_color" format="color"/>
        <attr name="finger_up_color" format="color"/>

        <attr name="view_count_per_line" format="integer"/>
        <attr name="view_padding" format="dimension"/>
    </declare-styleable>
</resources>